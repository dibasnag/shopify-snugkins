      {%- assign class = 'five-items' -%}
      {%- assign rows = '5' -%}
    {% else %}
      {%- assign class = 'for-items' -%}
      {%- assign rows = '4' -%}
    {% endif %}
  {% else %}
    {%- assign class = 'five-items' -%}
    {%- assign rows = '5' -%}
  {% endif %}
  
  <div class="widget-product">
    <div class="products-grid row {{ class }}" data-rows="{{ rows }}" id="recently-viewed-products-grid"></div>
  </div>
