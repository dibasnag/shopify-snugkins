    <h3 class="box-title">
      <span class="title"> 
        {% render 'multilang' with section.settings.recently_viewed_products_title %}
      </span>
    </h3>
  </div>
  {% endif %}
  
  {% if settings.category_layout == 'full_with' or template.suffix == 'fullwidth' %}
    {%- assign class = 'six-items' -%}
    {%- assign rows = '6' -%}
